import { useRouter } from 'vue-router'
import { useI18n } from 'vue-i18n'
import { apiClient } from '../api/client'

const router = useRouter()
const { t } = useI18n()

const form = ref({
  name: '',
  url: '',
  type: 'LOAD',
  vus: 10,
  duration: '30s',
  template: 'none'
})

const templates = [
  { value: 'none', label: 'None (Manual)', desc: 'Write your own k6 script or use AI generation' },
  { value: 'ecommerce', label: 'E-commerce', desc: 'Shopping flow with cart and checkout simulation' },
  { value: 'saas', label: 'SaaS Platform', desc: 'B2B workflow with auth and dashboard operations' },
  { value: 'api', label: 'REST API', desc: 'Full CRUD operations with search and filtering' }
]

const testTypes = computed(() => [
  { value: 'LOAD', label: t('testCreate.types.LOAD'), desc: t('testCreate.typeDescriptions.LOAD'), icon: 'M13 10V3L4 14h7v7l9-11h-7z' },
  { value: 'STRESS', label: t('testCreate.types.STRESS'), desc: t('testCreate.typeDescriptions.STRESS'), icon: 'M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z' },
  { value: 'SPIKE', label: t('testCreate.types.SPIKE'), desc: t('testCreate.typeDescriptions.SPIKE'), icon: 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6' },
  { value: 'SOAK', label: t('testCreate.types.SOAK'), desc: t('testCreate.typeDescriptions.SOAK'), icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z' }
])

const isGenerating = ref(false)
const error = ref('')

const handleSubmit = async () => {
  isGenerating.value = true
  error.value = ''

  try {
    // Create test via API
    const test = await apiClient.createTest({
      name: form.value.name,
      url: form.value.url,
      testType: form.value.type as 'LOAD' | 'STRESS' | 'SPIKE' | 'SOAK',
      vus: form.value.vus,
      duration: form.value.duration,
      template: form.value.template !== 'none' ? form.value.template : undefined
    })

    console.log('Test created:', test)

    // Navigate to test list
    router.push('/tests')
  } catch (err) {
    console.error('Failed to create test:', err)
    error.value = err instanceof Error ? err.message : 'Failed to create test'
  } finally {
    isGenerating.value = false
  }
}
</script>

