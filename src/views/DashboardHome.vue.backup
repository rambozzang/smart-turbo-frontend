  successRate: 0,
  avgResponseTime: 0,
  testsThisWeek: 0
})

const recentActivity = ref<Array<{
  id: number
  type: string
  name: string
  time: string
  status: string
}>>([])

const loading = ref(true)

function getRelativeTime(dateStr: string): string {
  const date = new Date(dateStr)
  const now = new Date()
  const diffMs = now.getTime() - date.getTime()
  const diffMins = Math.floor(diffMs / 60000)
  const diffHours = Math.floor(diffMs / 3600000)
  const diffDays = Math.floor(diffMs / 86400000)

  if (locale.value === 'ko') {
    if (diffMins < 1) return '방금 전'
    if (diffMins < 60) return `${diffMins}분 전`
    if (diffHours < 24) return `${diffHours}시간 전`
    return `${diffDays}일 전`
  } else {
    if (diffMins < 1) return 'just now'
    if (diffMins < 60) return `${diffMins} min ago`
    if (diffHours < 24) return `${diffHours} hr ago`
    return `${diffDays} days ago`
  }
}

function mapTestToActivity(test: Test) {
  return {
    id: test.id,
    type: test.status === 'COMPLETED' ? 'test_completed' : test.status === 'RUNNING' ? 'test_started' : 'test_pending',
    name: test.name,
    time: getRelativeTime(test.updatedAt),
    status: test.status === 'COMPLETED' ? 'success' : test.status === 'RUNNING' ? 'running' : 'pending'
  }
}

onMounted(async () => {
  try {
    loading.value = true

    // Fetch dashboard stats
    const dashboardStats = await apiClient.getDashboardStats()
    stats.value = dashboardStats

    // Fetch recent tests for activity
    const tests = await apiClient.getAllTests()
    recentActivity.value = tests
      .sort((a, b) => new Date(b.updatedAt).getTime() - new Date(a.updatedAt).getTime())
      .slice(0, 5)
      .map(mapTestToActivity)

  } catch (error) {
    console.error('Failed to fetch dashboard data:', error)
    // Show error message to user
  } finally {
    loading.value = false
  }
})
</script>

